<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cookandroid.to_da_project">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/today_diary_logo3"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/today_diary_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service android:name=".FirebaseinstanceIDServices">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>


        <activity android:name=".Join"/>
        <activity android:name=".Login"/>
        <activity android:name=".MainMenu"/>
        <activity android:name=".Setting"/>
        <activity android:name=".SettingBackground"/>
        <activity android:name=".SettingNicknameChange"/>
        <activity android:name=".TodoList"/>
        <activity android:name=".TodayQuestion"/>
        <activity android:name=".TodayList"/>
        <activity android:name=".SettingidpassCheck"/>
        <activity android:name=".SettingidpassChange"/>
        <activity android:name=".MyDBHelper"/>
        <activity android:name=".SettingUserSecession"/>
    </application>

</manifest>