<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"   android:padding="30dp"
    tools:context=".MainActivity" android:background="#ffffff">

        <TextView
            android:layout_marginTop="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textSize="20sp"
            android:layout_gravity="center"/>
        <View
            android:layout_width="100dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:background="#EDA1A1"/>
        <LinearLayout
            android:layout_marginTop="75dp"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:paddingBottom="5dp"
                android:textSize="17sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_style"
                android:layout_marginBottom="5dp"
                android:padding="3dp"
                android:id="@+id/Ed_LoginID"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:paddingBottom="5dp"
                android:textSize="17sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_style"
                android:padding="3dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/Ed_LoginPW"/>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <CheckBox
                    android:layout_gravity="center"
                    android:button="@android:color/transparent"
                    android:background="@drawable/auto_checkbox_custom"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/chk_autoLogin"/>
                <TextView
                    android:textColor="#4B4B4B"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자동 로그인"/>
            </LinearLayout>
        </LinearLayout>

        <!--
            <CheckBox
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:layout_marginRight="70dp"
                android:id="@+id/AutoRogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 자동 로그인"
                />
            !-->
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnLogin"
                android:textStyle="bold"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:text="로그인"
                android:textColor="#ffffff"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_style"/>

            <Button
                android:id="@+id/btnJoin"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:background="@drawable/button_style"
                android:text="회원가입"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </LinearLayout>

</LinearLayout>