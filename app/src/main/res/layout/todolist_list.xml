<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:id="@+id/Todolist_list">

    <ImageView
        android:layout_gravity="right"
        android:id="@+id/imgView_setting"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/delete_icon"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp" />

   <TextView
       android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Do List"
        android:textSize="20sp"/>
    <View
        android:layout_width="110dp"
        android:layout_height="4dp"
        android:background="#7CA4CB"/>

    <TextView
        android:padding="3dp"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@drawable/todolist_title_style"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:text="오늘의 할 일"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="270dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textColor="#AAAAAA"
                android:textSize="13sp"
                android:textAlignment="center"
                android:background="@drawable/edittext_style"/>

            <EditText
                android:padding="5dp"
                android:id="@+id/Ed_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:background="#E7E6E6"
                android:text="할 일을 추가하세요"
                android:textColor="#757575"
                android:textSize="13sp" />
        </FrameLayout>

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/more"/>
    </LinearLayout>

    <ListView
        android:id="@+id/todoListView"
        android:layout_marginTop="20dp"
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:dividerHeight="0px"
        android:divider="#FFFFFF"/>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ListBack"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:background="@drawable/button_style"
            android:text="돌아가기"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="추가하기"
            android:textColor="#FFFFFF"
            android:id="@+id/btn_ListAdd"
            android:background="@drawable/button_style"/>
    </LinearLayout>

</LinearLayout>