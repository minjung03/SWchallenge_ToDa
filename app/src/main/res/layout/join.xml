<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"   android:padding="30dp"
    android:layout_height="match_parent" android:background="#ffffff">


        <ImageView
            android:id="@+id/today_list_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back"/>

        <TextView
            android:layout_marginTop="95dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="20sp"
            android:layout_gravity="center"/>
        <View
            android:layout_width="100dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:background="#EDA1A1"/>

        <LinearLayout
            android:layout_marginTop="70dp"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* "
                    android:textColor="#A11818"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:paddingBottom="5dp"
                    android:textSize="17sp" />
                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(3자 이내)"
                    android:paddingBottom="5dp"
                    android:textSize="13sp" />
            </LinearLayout>
            <EditText
                android:maxLength="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_style"
                android:layout_marginBottom="5dp"
                android:padding="3dp"
                android:id="@+id/Ed_JoinName"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* "
                    android:textColor="#A11818"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:paddingBottom="5dp"
                    android:textSize="17sp" />
            </LinearLayout>
            <EditText
                android:maxLength="15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_style"
                android:layout_marginBottom="5dp"
                android:padding="3dp"
                android:id="@+id/Ed_JoinID"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* "
                    android:textColor="#A11818"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:paddingBottom="5dp"
                    android:textSize="17sp" />
            </LinearLayout>
            <EditText
                android:maxLength="15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_style"
                android:padding="3dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/Ed_JoinPW"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* "
                android:textAlignment="center"
                android:textColor="#A11818"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="은 필수사항"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnJoin"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="가입하기"
                android:textColor="#ffffff"
                android:background="@drawable/button_style"/>
        </LinearLayout>
